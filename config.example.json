{
	"vdirRoots": ["/path/to/your/calendars", "/home/user/.local/share/calendars"],
	"refreshInterval": 5000,
	"watchFiles": true,
	"server": {
		"port": 5173,
		"host": "localhost"
	},
	"fileWatcher": {
		"ignorePattern": "/(^|[\\/\\\\])\\..+/",
		"depth": 0
	},
	"api": {
		"baseUrl": "",
		"timeout": 30000
	},
	"theme": {
		"gridColumns": "2fr 1fr",
		"colors": {
			"textPrimary": "#1a1a1a",
			"textSecondary": "#666",
			"bgPrimary": "#ffffff",
			"colorPrimary": "#4285f4"
		}
	}
}
